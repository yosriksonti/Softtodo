{% extends 'security/index.html.twig' %}

{% block title %}
    2FA
    
{% endblock %}

{% block content %}
<div class="card-header justify-content-center">
    <h3 class="text-center fw-bold my-4">
        2FA
    </h3>
</div>
<div class="card-body">
    <form class="form" action="{{ checkPathUrl ? checkPathUrl: path(checkPathRoute) }}" method="post">
    
    <div class="row">
        <div class="card-body">
            <div class="row gx-3 mb-3">
                <div class="col-md-12">
                    <label class="small mb-1" for="inputPassword">
                        2FA Code               
                    </label>
                    <input
                        id="_auth_code"
                        type="text"
                        name="{{ authCodeParameterName }}"
                        autocomplete="one-time-code"
                        autofocus
                        class="form-control"
                        {#
                        https://www.twilio.com/blog/html-attributes-two-factor-authentication-autocomplete
                        If your 2fa methods are using numeric codes only, add these attributes for better user experience:
                        inputmode="numeric"
                        pattern="[0-9]*"
                        #}
                    />                             
                </div>
                
            </div>

            
            <button class="fw-500 btn btn-danger">
                    {{ "Verify"|trans({}, 'SchebTwoFactorBundle') }}
            </button>
        </div>
    </div>
</form>
</div>
{% endblock %}
    