{% extends 'base.html.twig' %}

{% block content %}
   <main>
        <header class="page-header page-header-compact page-header-dark bg-gradient ">
            <div class="container-fluid px-4">
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon">
                                    <i data-feather="envelop"></i>
                                </div>
                                Send Newsletter                        
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="container-xl px-4 mt-4">
            <div class="row gx-4">
                <div class="col-lg-8">
                {{ form_start(form) }}
                    <div class="card mb-4">
                        <div class="card-header">
                            Newsletter Form  
                            {% if success == true %}
                                <span class="badge bg-green-soft text-green" style="float:right">Sent Successfully</span>
                            {% endif %}                                                         
                        </div>
                        <div class="card-body">
                            <div class="row gx-3 mb-3">
                                <div class="col-md-12">
                                    {{ form_label(form.subject, ' Subject', {'label_attr':{'class':'small mb-1' }}) }}                                                          
                                    {{ form_widget(form.subject, {'attr':{'class':'form-control' }}) }}                                                 
                                </div>
                                <div class="invalid-feedback">
                                    {{ form_errors(form.subject) }}
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">

                                <div class="col-md-12">
                                    {{ form_label(form.body, ' Body', {'label_attr':{'class':'small mb-1' }}) }}                                                          
                                    {{ form_widget(form.body, {'attr':{ }}) }}                                                 
                                </div>
                                <div class="invalid-feedback">
                                    {{ form_errors(form.body) }}
                                </div>
                            </div>
                            <button class="fw-500 btn btn-danger" onclick="return confirm('Confirm ?');">
                                    {{ button_label|default('Send') }}
                            </button>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
</div>
        </div>
    </main>
{% endblock %}
